//basic layout styles
.body
  background _main_bg


.header
  width 100%
  height 36px
  position fixed
  top 0
  z-index 9999
  background #fff
  border-bottom 1px solid _main_border
  box-sizing border-box


.header-inner
  max-width 960px
  height 35px
  margin 0 auto


.logo
  width 100px
  height 35px
  background _gray


.content
  @extend $clearfix
  max-width 960px
  margin 36px auto 0
  padding 0


.footer
  clear both
  height 200px

//section styles

//home

.home
  @extend .clearfix
  margin 10px auto 0
  width 100%
  padding 0 5px
  box-sizing border-box
  padding-bottom 10px

  @media screen and (min-width: 800px)
    padding-right 310px

.home-main
  width 100%
  margin-bottom 10px
  @media screen and (min-width: 800px)
    float left

.home-aside
  width 300px
  @media screen and (min-width: 800px)
    float right
    margin-right -310px

  .ad-box
    width 300px
    height 300px
    background _silver


.joke
  @extend $clearfix
  padding 20px 0
  background #fff
  margin 10px 0 20px
  padding 0 10px
  box-shadow 0 1px 2px #bdc3c7

  h2
    font-size 17px
    margin 10px 0 0
    font-weight 100
    color darken(#fff, 65)
  p
    font-size 23px
    line-height 36px
    margin 10px 0
    color darken(#fff, 70)

