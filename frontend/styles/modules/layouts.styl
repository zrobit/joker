//basic layout styles
.body
  background #fff
h2
  // color darken(#fff, 50)
  color #345
p
  color darken(#345, 10)


.header
  width 100%
  height 35px
  top 0
  position fixed
  z-index 9999
  border-bottom 1px solid _silver
  box-sizing border-box


.header-inner
  max-width 960px
  height 35px
  margin 0 auto


.logo
  width 100px
  height 35px
  background _gray


.content
  @extend $clearfix
  max-width 960px
  margin 36px auto 0
  padding 0


.footer
  clear both
  height 200px

//section styles

//home

.home
  @extend .clearfix
  margin 10px auto 0
  width 100%
  padding 0 5px
  box-sizing border-box
  padding-bottom 10px

  @media screen and (min-width: 800px)
    padding-right 310px

.home-main
  width 100%
  margin-bottom 10px
  // background #fff
  // box-shadow 0 1px 2px _silver
  @media screen and (min-width: 800px)
    float left

.home-aside
  width 300px
  @media screen and (min-width: 800px)
    float right
    margin-right -310px

  .ad-box
    width 300px
    height 300px
    background _silver


.joke
  padding 20px 0
  h2
    font-size 18px
    margin 10px 0
    font-weight 100
  p
    font-size 24px
    line-height 36px
    // white-space pre-line
    margin 0

